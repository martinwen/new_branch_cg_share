<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_get_bg1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView 
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="请输入交易密码"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/close" />
        </RelativeLayout>

        <LinearLayout 
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_gravity="center"
                />
            
             <TextView 
                android:id="@+id/money"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.00元"
                android:textSize="13sp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                />
             
             <com.fanfanlicai.view.password.GridPasswordView
                android:id="@+id/gpv_length"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:gpvLineColor="@color/global_yellow"
                />
             
              <TextView 
                android:id="@+id/tv_mimatip"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码不正确，请重新输入"
                android:textSize="12sp"
                android:textColor="@color/global_bigred"
                android:layout_gravity="center"
                  android:gravity="center"
                android:visibility="gone"
                />
              
              <TextView 
                android:id="@+id/tv_mimaforget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记交易密码?"
                android:textSize="14sp"
                android:textColor="@color/text_blue"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>