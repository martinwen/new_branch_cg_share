<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/jiaxibg"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/tv_hongbao_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/youxiangou_logo"
            android:drawablePadding="8dp"
            android:text="优先购"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hongbao_usetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/youxiangou_point"
            android:drawablePadding="5dp"
            android:text="使用时间："
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_invest_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/youxiangou_point"
            android:drawablePadding="5dp"
            android:text="最低出借金额："
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hongbao_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/youxiangou_point"
            android:drawablePadding="5dp"
            android:text="适用产品："
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hongbao_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/youxiangou_point"
            android:drawablePadding="5dp"
            android:text="获得来源："
            android:textColor="@color/text_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_unused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/unused" />

</RelativeLayout>