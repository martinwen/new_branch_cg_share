<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:orientation="vertical"
    	android:background="@drawable/jiaxibg">
	     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_jiaxi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jiaxi_fanhe"
                android:drawablePadding="8dp"
                android:text="饭盒被邀请加息"
                android:textColor="@color/text_black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_jiaxi_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1%"
                android:textColor="@color/global_yellowcolor"
                android:textSize="15sp" />
        </LinearLayout>
	     <TextView 
	         android:id="@+id/tv_jiaxi_day"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="7dp"
	    	android:layout_marginLeft="15dp"
	    	android:drawableLeft="@drawable/jiaxipointuse"
	    	android:drawablePadding="5dp"
	    	android:text="加息天数："
	    	android:textSize="12sp"
	    	android:textColor="@color/text_gray"
	    	/>
	     <TextView 
	         android:id="@+id/tv_jiaxi_endtime"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp"
	    	android:layout_marginLeft="15dp"
	    	android:drawableLeft="@drawable/jiaxipointuse"
	    	android:drawablePadding="5dp"
	    	android:text="加息时间："
	    	android:textSize="12sp"
	    	android:textColor="@color/text_gray"
	    	/>
	     <TextView 
	         android:id="@+id/tv_jiaxi_info"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp"
	    	android:layout_marginLeft="15dp"
	    	android:drawableLeft="@drawable/jiaxipointuse"
	    	android:drawablePadding="5dp"
	    	android:text="特别说明："
	    	android:textSize="12sp"
	    	android:textColor="@color/text_gray"
	    	/>
	     <TextView 
	         android:id="@+id/tv_jiaxi_method"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp"
	    	android:layout_marginLeft="15dp"
	    	android:drawableLeft="@drawable/jiaxipointuse"
	    	android:drawablePadding="5dp"
	    	android:text="获得来源："
	    	android:textSize="12sp"
	    	android:textColor="@color/text_gray"
	    	/>
     </LinearLayout>

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="20dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:src="@drawable/using" />
</RelativeLayout>
