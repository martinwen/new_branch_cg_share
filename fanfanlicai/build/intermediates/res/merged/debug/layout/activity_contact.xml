<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_gray"
    android:orientation="vertical" >

    <RelativeLayout style="@style/title_container" >

        <TextView
            android:id="@+id/contact_back"
            style="@style/title_text_back" />

        <TextView
            style="@style/title_text_body"
            android:text="关于我们" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#fdfbfa"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/contactbg" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />

            <RelativeLayout
                style="@style/settingitem_container"
                android:background="@drawable/setting_item_selector" >

                <TextView
                    style="@style/contact_item"
                    android:drawableLeft="@drawable/telephone"
                    android:text="客服电话" />

                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:text="400-009-9855"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />

            <RelativeLayout
                android:id="@+id/rl_weixin"
                style="@style/settingitem_container"
                android:background="@drawable/setting_item_selector"
                android:clickable="true" >

                <TextView
                    style="@style/contact_item"
                    android:drawableLeft="@drawable/weixin"
                    android:text="微信公众号" />

                <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/global_red"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    style="@style/settingitem_container"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/contact_item"
                        android:layout_centerVertical="false"
                        android:drawableLeft="@drawable/one"
                        android:text="二维码" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/saoma" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />

            <RelativeLayout
                android:id="@+id/rl_location1"
                style="@style/settingitem_container"
                android:background="@drawable/setting_item_selector" >

                <TextView
                    style="@style/contact_item"
                    android:drawableLeft="@drawable/location"
                    android:text="定位我们" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/global_red"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/map" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_map"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="地址：浙江省嘉兴市南湖区竹园路100号1202室"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />
            
            <RelativeLayout
                style="@style/settingitem_container"
                android:background="@drawable/setting_item_selector" >

                <TextView
                    style="@style/contact_item"
                    android:drawableLeft="@drawable/wangzhi"
                    android:text="官方网站" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:text="www.fanfanjf.com"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />
            <RelativeLayout
                style="@style/settingitem_container"
                android:background="@drawable/setting_item_selector" >

                <TextView
                    style="@style/contact_item"
                    android:drawableLeft="@drawable/banben"
                    android:text="当前版本" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:text="2.0.0"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_width" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>