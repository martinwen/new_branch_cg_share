<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_red"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_container">

        <TextView
            android:id="@+id/bank_back"
            style="@style/title_text_back" />

        <TextView
            style="@style/title_text_body"
            android:text="我的银行卡" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/little"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="您的账户资金将由恒丰银行存管，出借更安心！"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/banknotbindbg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="22dp"
            android:text="饭饭金服"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:text="开通恒丰银行存管账户"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@color/global_red"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/little"
            android:drawablePadding="5dp"
            android:text="小贴士"
            android:textColor="@color/global_yellow"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="什么是同卡进出？"
            android:textColor="@color/text_black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:text="为保证您的资金安全要求同卡进出，即充值和提现需为同一张银行卡，所以同一时间您只能绑定一张您本人名下的银行卡。"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>