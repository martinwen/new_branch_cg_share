<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:background="@android:color/white"
     >
    <TextView
        android:id="@+id/xiangmu" 
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目名称："
        android:textColor="@color/text_gray"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/xiangmu_name" 
        android:layout_toRightOf="@id/xiangmu"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textColor="@color/text_black"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/xiangmu_money" 
        android:layout_below="@id/xiangmu_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借款金额："
        android:textColor="@color/text_gray"
        android:textSize="13sp"/>
	<TextView
        android:id="@+id/xiangmu_number" 
        android:layout_toRightOf="@id/xiangmu_money"
        android:layout_alignBottom="@id/xiangmu_money"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@color/text_black"
        android:textSize="13sp"/>
	<TextView
        android:id="@+id/xiangmu_time" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016/3/31"
        android:textColor="@color/text_gray"
        android:textSize="13sp"/>
</RelativeLayout>
