<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="买入时间"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_in_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_in"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="2016-12-23"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="历史年化结算利率"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_rate_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_rate"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="11.12%"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_invest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="出借金额"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_invest_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_invest"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="200000.00元"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="到期时间"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_out_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_out"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="2016-12-23"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="出借期限"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_day_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_day"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="30天"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_over"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="待收本息"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_over_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_over"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="200000.00元"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_isover"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:src="@drawable/yijieqing" />

</FrameLayout>