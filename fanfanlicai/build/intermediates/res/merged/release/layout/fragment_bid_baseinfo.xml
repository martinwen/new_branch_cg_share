<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/global_red" />

            <LinearLayout
                android:id="@+id/linearlayout_truly_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="借款人姓名："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_truly_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_truly_username"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_truly_idcard"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="借款人证件号："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_truly_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_truly_idcard"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_trulyloan_company"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="借款公司："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_trulyloan_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_trulyloan_company"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_trulyCompany_legalPersion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="法定代表人："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_trulyCompany_legalPersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_trulyCompany_legalPersion"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_borrow_money"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="借款金额："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_borrow_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_borrow_days"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_day_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="借款期限："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_borrow_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="计息日："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_interest_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_repay_method"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="还款方式："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_repay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_repay_method"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_loan_repay_source"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="还款来源："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_loan_repay_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_repay_source"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/linearlayout_risk_control"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="还款保障："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_risk_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <View
                android:id="@+id/line_risk_control"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>