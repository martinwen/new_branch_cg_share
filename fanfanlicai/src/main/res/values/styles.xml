<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- 把activity设置成弹窗的样式 -->
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- 底部4个button的样式 -->
    <style name="bottomStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_gravity">center_vertical</item>
            <item name="android:drawablePadding">2dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:button">@android:color/transparent</item>
            <item name="android:textColor">@drawable/bottom_text_selector</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:textSize">11sp</item>
    </style>
    
    <!-- 设置界面右边箭头图片的样式 -->
    <style name="setting_image_right">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 设置界面左边文字的样式 -->
    <style name="setting_text_left" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 设置界面右边文字的样式 -->
    <style name="setting_text_right" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 头部标题的relativelayout样式 -->
    <style name="title_container">
        <item name="android:background">@color/global_yellowcolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- 头部标题的返回文字样式 -->
    <style name="title_text_back" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableLeft">@drawable/back_arrow</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text"></item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- 头部标题的主体文字样式 -->
    <style name="title_text_body" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 设置条目的relativelayout样式 -->
    <style name="settingitem_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>
    
    <!-- 联系我们条目的左边文字样式 -->
    <style name="contact_item" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- 设置提现密码框里的文字样式 -->
    <style name="InputTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:password">true</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    
    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    
     <!-- 自定义Dialog样式必须指定parent -->
    <style name="YzmDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--朋友圈图片全屏样式-->
    <style name="Pic_Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">1</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/ShowImageDialogAnimation</item>
    </style>
    <style name="ShowImageDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
</resources>
