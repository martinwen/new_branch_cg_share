<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
     >

    <ImageView
        android:id="@+id/iv_isRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/notread" />

    <TextView
        android:id="@+id/notice_name" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="【活动公告】"
        android:textColor="@color/text_gray"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/notice_time" 
        android:layout_toRightOf="@id/notice_name"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-3-20 23:00:00"
        android:textColor="@color/text_gray"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/notice_title" 
        android:layout_below="@id/notice_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_checkbox_btn"
        />
</RelativeLayout>
