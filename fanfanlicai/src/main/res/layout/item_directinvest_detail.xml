<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_red"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cal_title_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_uncapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unclear_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/di_text_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="1028623.00"
                        android:textColor="@color/text_darkorange"
                        android:textSize="@dimen/text_larger" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/di_text_height"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="待收本金（元）"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/line_gray_alpha" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_unclear_income"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/di_text_height"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="8623.00"
                        android:textColor="@color/text_darkorange"
                        android:textSize="@dimen/text_larger" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/di_text_height"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="待收收益（元）"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/global_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/tv_clear_capital"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="1028623.00"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_larger" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:gravity="center_vertical"
                            android:text="已结本金（元）"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="40dp"
                        android:background="@color/line_gray_alpha" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/tv_clear_income"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="8623.00"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_larger" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:gravity="center_vertical"
                            android:text="已结收益（元）"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_interesting" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/cal_title_background"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="出借时间"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/tv_investtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-18 18:26:23"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_nomal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_alpha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cal_title_background"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="到期时间"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-18"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_nomal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_alpha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cal_title_background"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/tv_day_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="项目期限"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/tv_invest_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30天"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_nomal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_alpha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/little"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="您的资金正在匹配以下标的"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small" />
</LinearLayout>