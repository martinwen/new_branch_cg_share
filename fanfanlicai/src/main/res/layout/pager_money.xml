<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bgcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fanhehead" />

        <com.fanfanlicai.view.VerticalScrollView
            android:id="@+id/top_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.fanfanlicai.view.banner.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/ic_default_banner"
                    app:canLoop="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/iv_invitefriend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/invitefriend" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="8dp"
                            android:text="邀请好友"
                            android:textColor="@color/text_black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/tishichuang"
                            android:gravity="center"
                            android:text="得奖金"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_pingtaishuju"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pingtaishuju" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="8dp"
                            android:text="信息披露"
                            android:textColor="@color/text_black"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_fanfanxiaoxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/fanfanxiaoxi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="8dp"
                            android:text="官方公告"
                            android:textColor="@color/text_black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/tishichuang"
                            android:gravity="center"
                            android:text="新公告"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_dafan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/dafan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="8dp"
                            android:text="打饭"
                            android:textColor="@color/text_black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/tishichuang"
                            android:gravity="center"
                            android:text="送抽奖"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_width" />

                <RelativeLayout
                    android:id="@+id/rl_fanhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fanhe">

                    <ImageView
                        android:id="@+id/iv_fanheshouqing"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:src="@drawable/fanheshouqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:paddingBottom="10dp"
                        android:text="饭盒"
                        android:textColor="#fd6437"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="历史年化结算利率"
                        android:textColor="#fe9c7f"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fhYearRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:paddingBottom="20dp"
                        android:text="8.88%~11.18%"
                        android:textColor="#fd6437"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:lineSpacingExtra="8dp"
                        android:paddingRight="25dp"
                        android:text="灵活存取"
                        android:textColor="#fd6437"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/fanhefanwanbg" />

                <RelativeLayout
                    android:id="@+id/rl_fanwan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fanwan">

                    <ImageView
                        android:id="@+id/iv_fanwanshouqing"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:src="@drawable/fanwanshouqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:paddingBottom="10dp"
                        android:text="饭碗"
                        android:textColor="#95481a"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="历史年化结算利率"
                        android:textColor="#f9b45a"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fwYearRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:paddingBottom="20dp"
                        android:text="9.00%~12%"
                        android:textColor="#95481a"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:lineSpacingExtra="8dp"
                        android:paddingRight="25dp"
                        android:text="期限自由"
                        android:textColor="#95481a"
                        android:textSize="14sp" />
                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/fanhefanwanbg" />

                <RelativeLayout
                    android:id="@+id/rl_fantong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fantong">

                    <ImageView
                        android:id="@+id/iv_fantongshouqing"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/fantongshouqing"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:paddingBottom="10dp"
                        android:text="饭桶"
                        android:textColor="#5058c0"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="历史年化结算利率"
                        android:textColor="#aeb3fb"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_ftYearRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:paddingBottom="20dp"
                        android:text="12.12%"
                        android:textColor="#5058c0"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:lineSpacingExtra="8dp"
                        android:paddingRight="25dp"
                        android:text="高端定制"
                        android:textColor="#5058c0"
                        android:textSize="14sp" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_registerandlogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_short_selector"
                            android:gravity="center"
                            android:text="注册"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_short_selector"
                            android:gravity="center"
                            android:text="登录"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shouiyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shouyi"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rl_zuori"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="昨日收益（元）"
                                    android:textColor="@color/text_gray"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_zuori"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp"
                                    android:text="0.00"
                                    android:textColor="@color/global_yellowcolor"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_jiangjin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="奖金余额（元）"
                                    android:textColor="@color/text_gray"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_jiangjin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp"
                                    android:text="0.00"
                                    android:textColor="@color/global_yellowcolor"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="4dp"
                                    android:background="@drawable/yaoqinghaoyou" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shouyi"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rl_zongshouyi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="总收益（元）"
                                    android:textColor="@color/text_gray"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_zongshouyi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp"
                                    android:text="0.00"
                                    android:textColor="@color/global_yellowcolor"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_zongzichan"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="总资产（元）"
                                    android:textColor="@color/text_gray"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_zongzichan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30dp"
                                    android:text="0.00"
                                    android:textColor="@color/global_yellowcolor"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/little_gray"
                    android:drawablePadding="5dp"
                    android:text="市场有风险，选择需谨慎"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.fanfanlicai.view.VerticalScrollView>

    </LinearLayout>
</RelativeLayout>