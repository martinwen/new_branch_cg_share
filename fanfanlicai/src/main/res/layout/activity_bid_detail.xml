<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_red"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_container">

        <TextView
            android:id="@+id/get_back"
            style="@style/title_text_back" />

        <TextView
            style="@style/title_text_body"
            android:text="标的详情" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cal_title_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_unclear_capital"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="0.00"
                            android:textColor="@color/text_darkorange"
                            android:textSize="@dimen/text_larger" />

                        <TextView
                            android:id="@+id/tv_desc_left"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="待收本金(元)"
                            android:textColor="@color/cal_arrow_enable"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="40dp"
                        android:background="@color/line_gray_alpha" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_unclear_income"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="0.00"
                            android:textColor="@color/text_darkorange"
                            android:textSize="@dimen/text_larger" />

                        <TextView
                            android:id="@+id/tv_desc_right"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/di_text_height"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="待收收益(元)"
                            android:textColor="@color/cal_arrow_enable"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_interesting" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/cal_title_background"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:text="出借时间"
                    android:textColor="@color/cal_arrow_enable"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:id="@+id/tv_investtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cal_title_background"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:text="到期时间"
                    android:textColor="@color/cal_arrow_enable"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cal_title_background"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp">

                <TextView
                    android:id="@+id/tv_day_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:text="项目期限"
                    android:textColor="@color/cal_arrow_enable"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:id="@+id/tv_invest_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30天"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="回款计划"
                android:textColor="@color/cal_arrow_enable"
                android:textSize="@dimen/text_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cal_title_background"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:text="回款时间"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="应还本金（元）"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="应还利息（元）"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <LinearLayout
                android:id="@+id/layout_repayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_repay_capital_desc"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/di_text_height"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical|right"
                    android:text="待收总计："
                    android:textColor="@color/cal_arrow_enable"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:id="@+id/tv_total_repaycapital"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/di_text_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="0.00"
                    android:textColor="@color/text_lightorange"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/di_text_height"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="元"
                    android:textColor="@color/cal_arrow_enable"
                    android:textSize="@dimen/text_nomal" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_bid_info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="标的信息"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/arrow"
                    android:text="查看详情"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_nomal" />

            </RelativeLayout>

            <View
                android:id="@+id/view_repayment_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray_alpha" />

            <RelativeLayout
                android:id="@+id/rl_repayment_recorde"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="回款记录"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/arrow"
                    android:text="查看详情"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_nomal" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>